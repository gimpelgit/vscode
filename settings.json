{
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "files.autoSave": "afterDelay",
  // Предложение обновить версию VS Code
  "update.mode": "none",
  
  "git.ignoreMissingGitWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "window.zoomLevel": 2,
  // На linux убирает бесполезную верхнюю строку заголовка
  "window.titleBarStyle": "custom",
  // Высота вкладок (открытых файлов)
  "window.density.editorTabHeight": "default", // "compact" or "default"
  "editor.fontSize": 17,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  // Отступы в коде
  "[python]": {"editor.tabSize": 4},
  "[csharp]": {"editor.tabSize": 4},
  "[sql]": {"editor.tabSize": 4},
  "[jsonc]" : {"editor.tabSize": 2},
  "[json]"  : {"editor.tabSize": 2},
  "[javascript]": {"editor.tabSize": 2},

  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  // Отображение подсказок при наведении (не при написании)
  "editor.hover.enabled": true,
  
  "editor.lineHeight": 28,
  "editor.stickyScroll.enabled": false,
  "editor.guides.indentation": true, // линии отображающие вложенность
  "extensions.ignoreRecommendations": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "redhat.telemetry.enabled": false,
  "java.inlayHints.parameterNames.enabled": "none",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.enabled": false,
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,

  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.defaultProfile.linux": "bash",

  "cmake.configureOnOpen": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showOptionsMovedNotification": false,
  // Вставьте сюда свой путь до php.exe
  "php.validate.executablePath": "D:/apps/OpenServer/modules/PHP-8.3/PHP/php.exe",
  "phpserver.phpPath": "D:/apps/OpenServer/modules/PHP-8.3/PHP/php.exe",

  "liveServer.settings.donotShowInfoMsg": true,
  "dotnet.codeLens.enableReferencesCodeLens": false,
  // Настройка цветов темы
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark Modern]": {
      "rules": {
        "variable.readonly": "#9CDCFE",
        "variable.defaultLibrary": "#4EC9B0",
      }
    }
  },
}
